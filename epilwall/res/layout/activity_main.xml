<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <Button
        android:onClick="showPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="open wallpaper picker"
        android:textSize="16sp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="settings"
        android:textSize="16sp"
        android:textColor="#836384"/>
    
    <CheckBox
        android:onClick="onClick"
        android:id="@+id/cb_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="show debug"
        android:textSize="16sp"
        android:textColor="#836384"/>
    
    <CheckBox
        android:onClick="onClick"
        android:id="@+id/cb_show_circles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="spawn circles"
        android:textSize="16sp"
        android:textColor="#836384"/>
    
    <CheckBox
        android:onClick="onClick"
        android:id="@+id/cb_show_squares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="spawn squares"
        android:textSize="16sp"
        android:textColor="#836384"/>
    
    <Button
        android:onClick="onClick"
        android:id="@+id/cb_clear_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="clear all"
        android:textSize="17sp"
        android:background="#ffffff"
        android:textColor="#22914D"/>

</LinearLayout>
